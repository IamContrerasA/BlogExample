<h4><%= title %></h4>
<table class="table table-striped">
  <tbody>
    <% articles.each do |article| %>
    <tr class="row">
      <td class="col-xs-6 col-md-6"> <%= link_to article.title, article %></td>
      <td class="col-xs-6 col-md-2">
        <%= check_box_tag(:status, 1, article.public?) %>
        <%= label_tag(:status, "Public") %>
      </td>
      <td class="col-xs-6 col-md-2">
        <%= check_box_tag(:status, 1, article.private?) %>
        <%= label_tag(:status, "Private") %>
      </td>
      <td class="col-xs-6 col-md-2">
        <%= check_box_tag(:status, 1, article.archived?) %>
        <%= label_tag(:status, "Archived") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>