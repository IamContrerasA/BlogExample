<div class="card">
  <div class="card-header">
    <h5 class="card-title"><%= comment.commenter %></h5>
  </div>
  <div class="card-body">
    <p class="card-text"><%= comment.body %></p>
    <%= link_to 'Destroy Comment', [comment.article, comment],
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger" %>
  </div>
</div>